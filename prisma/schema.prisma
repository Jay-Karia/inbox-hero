generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  clerkId     String       @unique
  email       String       @unique
  name        String?
  stats       Stats?
  sessions    Session[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt @default(now())
}

model Stats {
  id             Int      @id @default(autoincrement())
  userId         String   @unique
  totalProcessed Int
  processedToday Int
  averageTime    Int
  streak         Int
  unreadEmails   Int
  dailyGoal      Int
  user           User     @relation(fields: [userId], references: [clerkId])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt @default(now())
}

model Session {
  id              Int       @id @default(autoincrement())
  userId          String
  startTime       DateTime  @default(now())
  endTime         DateTime?
  duration        Int?
  emailsProcessed Int
  archived        Int
  deleted         Int
  replied         Int
  user            User      @relation(fields: [userId], references: [clerkId])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt @default(now())
}
